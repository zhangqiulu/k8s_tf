apiVersion: v1
kind: Pod
metadata:
  name: {{ name }}
  labels:
    name: {{ labels_name }}
    role: {{ labels_role }}
spec:
  restartPolicy: Never
  containers:
  - name: {{ container_name }}
    image: {{ image }}
    ports:
    - containerPort: {{ ports }}
    volumeMounts:
    - name: home-path
      mountPath: {{ host_path }}
  volumes:
  - name: home-path
    persistentVolumeClaim:
      claimName: nfs-pvc

---
